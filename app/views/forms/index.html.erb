<!-- view/forms/index.html -->
<% if user_signed_in? %>
  <%= search_form_for @q do |f| %>
      <%= f.label :comment_cont, "検索"%><%= f.search_field :comment_cont %><%= f.submit %>
  <% end %>
  <% @forms.each do |form| %>
    <div class="container post">
      <div class="row">
          <div class="col-md-10 col-md-offset-1"><h3><%= form.title %></h3></div>
          <div class="col-md-10 col-md-offset-1"><p><%= link_to form.user.name,user_path(form.user_id)%></p></div>
          <div class="col-md-10 col-md-offset-1"><p><%= form.created_at %></p></div>
          <div class="col-md-10 col-md-offset-1"><iframe srcdoc="<%= form.comment %>"></iframe></div>
          
      </div>
      <div class="selector">
         <%= link_to 'Show', form,class:'btn btn-success'%>
         <%= link_to 'Edit', edit_form_path(form),class:'btn btn-primary'%>
         <%= link_to 'Destroy', form, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger' %>
      </div>
    </div>
  <% end %>

<% else %>
  <h1>Welcome to Study App</h1>
<% end %>